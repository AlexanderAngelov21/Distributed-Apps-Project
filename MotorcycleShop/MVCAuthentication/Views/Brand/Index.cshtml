@using PagedList.Mvc
@model PagedList.IPagedList<MVCAuthentication.ViewModels.BrandVM>

@{
    ViewBag.Title = "Index";
}

<h2>Brands Information</h2>

<p>
    @Html.ActionLink("Create New Brand", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Search Brand By Name: @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
        <input type="submit" value="Search" />
    </p>}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CountryOfOrigin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FoundedIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AddedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AddedFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LowestModelPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LowestModelPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div id="pager">
    <p> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div> 